<?xml version="1.0" encoding="utf-8"?>
<org.puder.highlight.internal.HighlightView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/highlight_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/highlight_description"
        style="@style/HighlightDescription"/>

    <Button
        android:id="@+id/highlight_button"
        style="@style/HighlightButton"
        android:layout_below="@id/highlight_description"/>

    <TextView
        android:id="@+id/highlight_title"
        style="@style/HighlightTitle"
        android:layout_above="@id/highlight_description"/>

    <RelativeLayout
        android:id="@+id/highlight_hitbox"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"/>

</org.puder.highlight.internal.HighlightView>